@using SoftUniProject.Data.Models.Enums
@using SoftUniProject.Data.Models
@model IEnumerable<SoftUniProject.ViewModels.OrderListViewModel>

@{
    ViewData["Title"] = "Available Orders";
}

<div class="container py-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h1 class="display-5 fw-bold text-success">
                <i class="bi bi-geo-alt me-2"></i>Available Orders
            </h1>
            <p class="text-muted">Find and accept new delivery requests in your area</p>
        </div>
        <a asp-action="Available" class="btn btn-outline-primary rounded-pill shadow-sm">
            <i class="bi bi-arrow-clockwise me-1"></i> Refresh
        </a>
    </div>

    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show mb-4" role="alert">
            <i class="bi bi-exclamation-triangle-fill me-2"></i>@TempData["Error"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    @if (!Model.Any())
    {
        <div class="text-center py-5 bg-light rounded-4 border">
            <i class="bi bi-bicycle display-1 text-secondary opacity-50"></i>
            <h3 class="mt-3">No orders available</h3>
            <p class="text-muted">There are currently no pending orders. Check back later!</p>
        </div>
    }
    else
    {
        <div class="row g-4">
            @foreach (var order in Model)
            {
                <div class="col-md-6 col-lg-4">
                    <div class="card h-100 border-0 shadow-sm rounded-4 overflow-hidden hover-shadow transition">
                        <div class="card-header bg-white border-0 pt-4 px-4 d-flex justify-content-between align-items-start">
                            <span class="badge rounded-pill bg-warning text-dark fs-6 px-3 py-2">
                                <i class="bi bi-clock-history me-1"></i> @order.Status
                            </span>
                            <span class="text-muted small">
                                <i class="bi bi-calendar3 me-1"></i>@order.FormattedCreatedOn
                            </span>
                        </div>
                        <div class="card-body px-4">
                            <h5 class="card-title fw-bold mb-3 text-truncate">@order.Description</h5>
                            
                            <div class="mb-3">
                                <div class="text-muted small mb-1">Pickup</div>
                                <div class="fw-semibold text-truncate"><i class="bi bi-geo-fill text-primary me-2"></i>@order.PickupAddress</div>
                            </div>
                            
                            <div class="mb-3">
                                <div class="text-muted small mb-1">Delivery</div>
                                <div class="fw-semibold text-truncate"><i class="bi bi-pin-map-fill text-success me-2"></i>@order.DeliveryAddress</div>
                            </div>

                            <div class="d-flex align-items-center mb-3">
                                <div class="bg-warning bg-opacity-10 p-2 rounded-circle me-3">
                                    <i class="bi bi-wallet2 text-warning"></i>
                                </div>
                                <div>
                                    <div class="text-muted small">Pickup Payment</div>
                                    <div class="fw-bold">
                                        @if (order.RequiresPayment)
                                        {
                                            <span class="text-danger">â‚¬@(order.EstimatedPickupPrice?.ToString("F2") ?? "0.00")</span>
                                        }
                                        else
                                        {
                                            <span class="text-success">Not required</span>
                                        }
                                    </div>
                                </div>
                            </div>
                            
                            <div class="d-flex align-items-center mb-3">
                                <div class="bg-primary bg-opacity-10 p-2 rounded-circle me-3">
                                    <i class="bi bi-cash-coin text-primary"></i>
                                </div>
                                <div>
                                    <div class="text-muted small">Potential Earnings</div>
                                    <div class="fw-bold text-primary">@order.FormattedPrice</div>
                                </div>
                            </div>
                        </div>
                        <div class="card-footer bg-light border-0 p-3 mt-auto">
                            <form asp-action="Accept" method="post" class="d-grid">
                                <input type="hidden" name="id" value="@order.Id" />
                                <button type="submit" class="btn btn-success rounded-pill">
                                    Accept Order <i class="bi bi-check-lg ms-1"></i>
                                </button>
                            </form>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
</div>

<style>
    .hover-shadow:hover {
        transform: translateY(-5px);
        box-shadow: 0 .5rem 1rem rgba(0,0,0,.15)!important;
    }
    .transition {
        transition: all 0.3s ease;
    }
</style>
