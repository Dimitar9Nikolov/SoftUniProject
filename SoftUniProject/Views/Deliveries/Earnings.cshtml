@model SoftUniProject.ViewModels.EarningsViewModel

@{
    ViewData["Title"] = "My Earnings";
}

<div class="container py-4">
    <div class="row mb-4">
        <div class="col-md-8">
            <h1 class="display-5 fw-bold text-primary">
                <i class="bi bi-wallet2 me-2"></i>My Earnings
            </h1>
            <p class="text-muted">Track your total income from completed deliveries</p>
        </div>
        <div class="col-md-4 text-md-end pt-2">
            <a asp-action="Earnings" class="btn btn-outline-primary rounded-pill shadow-sm">
                <i class="bi bi-arrow-clockwise me-1"></i> Refresh
            </a>
        </div>
    </div>

    <!-- Earnings Summary Card -->
    <div class="card border-0 shadow-sm rounded-4 mb-5 bg-primary text-white overflow-hidden">
        <div class="card-body p-5 text-center position-relative">
            <div class="position-absolute top-0 start-0 w-100 h-100 opacity-10" style="background: url('https://www.transparenttextures.com/patterns/cubes.png');"></div>
            <h5 class="text-uppercase opacity-75 mb-1 fw-bold">Total Earnings</h5>
            <h2 class="display-2 fw-bold mb-0">â‚¬@Model.TotalEarnings.ToString("F2")</h2>
            <div class="mt-3">
                <span class="badge rounded-pill bg-white text-primary px-3 py-2 fs-6">
                    <i class="bi bi-check-circle-fill me-1"></i> @Model.CompletedDeliveries.Count() Deliveries Completed
                </span>
            </div>
        </div>
    </div>

    <h3 class="fw-bold mb-4">
        <i class="bi bi-list-check me-2"></i>Delivery History
    </h3>

    @if (!Model.CompletedDeliveries.Any())
    {
        <div class="text-center py-5 bg-light rounded-4 border">
            <i class="bi bi-cash-stack display-1 text-secondary opacity-50"></i>
            <h3 class="mt-3">No earnings yet</h3>
            <p class="text-muted">Complete your first delivery to start earning!</p>
            <a asp-action="Available" class="btn btn-primary mt-2">Browse available orders</a>
        </div>
    }
    else
    {
        <div class="row g-4">
            @foreach (var order in Model.CompletedDeliveries)
            {
                <div class="col-md-6 col-lg-4">
                    <div class="card h-100 border-0 shadow-sm rounded-4 overflow-hidden hover-shadow transition">
                        <div class="card-header bg-white border-0 pt-4 px-4 d-flex justify-content-between align-items-start">
                            <span class="badge rounded-pill bg-success fs-6 px-3 py-2">
                                <i class="bi bi-check-lg me-1"></i> Completed
                            </span>
                            <span class="text-muted small">
                                <i class="bi bi-calendar3 me-1"></i>@order.FormattedCreatedOn
                            </span>
                        </div>
                        <div class="card-body px-4">
                            <h5 class="card-title fw-bold mb-3 text-truncate">@order.Description</h5>
                            
                            <div class="mb-3">
                                <div class="text-muted small mb-1">Customer</div>
                                <div class="fw-semibold"><i class="bi bi-person-fill text-secondary me-2"></i>@order.CustomerName</div>
                            </div>
                            
                            <div class="d-flex align-items-center mb-3">
                                <div class="bg-success bg-opacity-10 p-2 rounded-circle me-3">
                                    <i class="bi bi-cash text-success"></i>
                                </div>
                                <div>
                                    <div class="text-muted small">Earned</div>
                                    <div class="fw-bold text-success">@order.FormattedPrice</div>
                                </div>
                            </div>
                        </div>
                        <div class="card-footer bg-light border-0 p-3 mt-auto">
                            <div class="d-grid">
                                <a asp-action="Details" asp-route-id="@order.Id" class="btn btn-outline-secondary btn-sm rounded-pill">
                                    View Details
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
</div>

<style>
    .hover-shadow:hover {
        transform: translateY(-5px);
        box-shadow: 0 .5rem 1rem rgba(0,0,0,.15)!important;
    }
    .transition {
        transition: all 0.3s ease;
    }
</style>
