@model SoftUniProject.ViewModels.CreateOrderViewModel

@{
    ViewData["Title"] = "Create Order";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6">
            <div class="card border-0 shadow-lg rounded-4">
                <div class="card-header bg-primary text-white p-4 rounded-top-4">
                    <div class="d-flex align-items-center">
                        <i class="bi bi-plus-circle-dotted fs-1 me-3"></i>
                        <div>
                            <h2 class="mb-0 fw-bold">New Delivery</h2>
                            <p class="mb-0 opacity-75">Fill in the details for your shipment</p>
                        </div>
                    </div>
                </div>
                <div class="card-body p-4 p-md-5">
                    <form asp-action="Create" method="post">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger mb-4 rounded-3" role="alert"></div>

                        <div class="mb-4">
                            <label asp-for="Description" class="form-label fw-semibold">
                                <i class="bi bi-card-text me-1"></i> What are you sending?
                            </label>
                            <input asp-for="Description" class="form-control form-control-lg rounded-3 shadow-sm border-0 bg-light" placeholder="e.g. Documents, Package, Groceries" />
                            <span asp-validation-for="Description" class="text-danger small"></span>
                        </div>

                        <div class="mb-4">
                            <label asp-for="PickupAddress" class="form-label fw-semibold">
                                <i class="bi bi-geo-alt me-1 text-danger"></i> Pickup Address
                            </label>
                            <div class="input-group">
                                <span class="input-group-text bg-light border-0 rounded-start-3 shadow-sm">
                                    <i class="bi bi-house-door"></i>
                                </span>
                                <input asp-for="PickupAddress" class="form-control form-control-lg border-0 bg-light shadow-sm rounded-end-3" placeholder="Full address" />
                            </div>
                            <span asp-validation-for="PickupAddress" class="text-danger small"></span>
                        </div>

                        <div class="mb-4">
                            <label asp-for="DeliveryAddress" class="form-label fw-semibold">
                                <i class="bi bi-pin-map me-1 text-success"></i> Delivery Address
                            </label>
                            <div class="input-group">
                                <span class="input-group-text bg-light border-0 rounded-start-3 shadow-sm">
                                    <i class="bi bi-flag"></i>
                                </span>
                                <input asp-for="DeliveryAddress" class="form-control form-control-lg border-0 bg-light shadow-sm rounded-end-3" placeholder="Destination address" />
                            </div>
                            <span asp-validation-for="DeliveryAddress" class="text-danger small"></span>
                        </div>

                        <hr class="my-4 opacity-25">

                        <div class="mb-4">
                            <div class="form-check form-switch p-0 d-flex align-items-center justify-content-between bg-light p-3 rounded-3 shadow-sm border-0">
                                <label class="form-check-label fw-semibold mb-0" for="requiresPaymentSwitch">
                                    <i class="bi bi-currency-dollar me-1 text-warning"></i> Pay for items at pickup?
                                </label>
                                <input asp-for="RequiresPayment" class="form-check-input ms-0" type="checkbox" id="requiresPaymentSwitch" role="switch">
                            </div>
                            <div class="mt-2 small text-muted">
                                <i class="bi bi-info-circle me-1"></i> Enable if the delivery person needs to pay the merchant when collecting your items.
                            </div>
                        </div>

                        <div id="estimatedPriceContainer" class="mb-4 animate-fade-in" style="display: none;">
                            <label asp-for="EstimatedPickupPrice" class="form-label fw-semibold">
                                <i class="bi bi-calculator me-1"></i> Estimated Item Price
                            </label>
                            <div class="input-group">
                                <span class="input-group-text bg-light border-0 rounded-start-3 shadow-sm">â‚¬</span>
                                <input asp-for="EstimatedPickupPrice" class="form-control form-control-lg border-0 bg-light shadow-sm rounded-end-3" placeholder="0.00" type="number" step="0.01" />
                            </div>
                            <span asp-validation-for="EstimatedPickupPrice" class="text-danger small"></span>
                        </div>

                        <div class="mb-4">
                            <label class="form-label fw-semibold">
                                <i class="bi bi-credit-card me-1"></i> Payment Method
                            </label>
                            <div class="d-grid gap-2">
                                <div class="payment-option border rounded-3 p-3 shadow-sm bg-white border-primary position-relative">
                                    <input type="radio" asp-for="PaymentMethod" value="@SoftUniProject.Data.Models.Enums.PaymentMethod.CashOnDelivery" id="payCash" class="form-check-input position-absolute" checked style="top: 1.25rem; right: 1rem;">
                                    <label class="form-check-label d-flex align-items-center w-100 cursor-pointer" for="payCash">
                                        <div class="bg-success bg-opacity-10 p-2 rounded-2 me-3">
                                            <i class="bi bi-cash-stack text-success fs-4"></i>
                                        </div>
                                        <div>
                                            <div class="fw-bold">Cash / Pay at Delivery</div>
                                            <div class="small text-muted">Pay the delivery man directly</div>
                                        </div>
                                    </label>
                                </div>

                                <div class="payment-option border rounded-3 p-3 shadow-sm bg-light opacity-75 position-relative">
                                    <input type="radio" asp-for="PaymentMethod" value="@SoftUniProject.Data.Models.Enums.PaymentMethod.Card" id="payCard" class="form-check-input position-absolute" disabled style="top: 1.25rem; right: 1rem;">
                                    <label class="form-check-label d-flex align-items-center w-100" for="payCard">
                                        <div class="bg-primary bg-opacity-10 p-2 rounded-2 me-3">
                                            <i class="bi bi-credit-card-2-back text-primary fs-4"></i>
                                        </div>
                                        <div>
                                            <div class="fw-bold">Card Payment</div>
                                            <div class="badge bg-secondary">Not available at the moment</div>
                                        </div>
                                    </label>
                                </div>
                            </div>
                        </div>

                        <div class="d-grid gap-3 mt-5">
                            <button type="submit" class="btn btn-primary btn-lg rounded-pill py-3 shadow">
                                <i class="bi bi-send-check me-2"></i> Create Order
                            </button>
                            <a asp-action="Index" class="btn btn-link text-muted text-decoration-none">
                                <i class="bi bi-arrow-left me-1"></i> Back to My Orders
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .animate-fade-in {
        animation: fadeIn 0.3s ease-in-out;
    }
    @@keyframes fadeIn {
        from { opacity: 0; transform: translateY(-10px); }
        to { opacity: 1; transform: translateY(0); }
    }
    .cursor-pointer {
        cursor: pointer;
    }
    .form-switch .form-check-input {
        width: 3em;
        height: 1.5em;
        cursor: pointer;
    }
</style>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        $(document).ready(function() {
            const $switch = $('#requiresPaymentSwitch');
            const $priceContainer = $('#estimatedPriceContainer');
            const $priceInput = $('#EstimatedPickupPrice');

            function togglePriceField() {
                if ($switch.is(':checked')) {
                    $priceContainer.show();
                    $priceInput.prop('required', true);
                } else {
                    $priceContainer.hide();
                    $priceInput.prop('required', false);
                    $priceInput.val('');
                }
            }

            $switch.on('change', togglePriceField);
            
            // Initial state
            togglePriceField();

            // Handle payment option clicks for better UX
            $('.payment-option:not(.opacity-75)').on('click', function() {
                $(this).find('input[type="radio"]').prop('checked', true);
            });
        });
    </script>
}
