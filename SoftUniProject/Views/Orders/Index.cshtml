@using SoftUniProject.Data.Models.Enums
@model IEnumerable<SoftUniProject.ViewModels.OrderListViewModel>

@{
    ViewData["Title"] = "My Orders";
}

<div class="container py-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h1 class="display-5 fw-bold text-primary">
                <i class="bi bi-box-seam me-2"></i>My Orders
            </h1>
            <p class="text-muted">Manage and track your delivery requests</p>
        </div>
        <a asp-action="Create" class="btn btn-primary btn-lg rounded-pill shadow-sm">
            <i class="bi bi-plus-lg me-1"></i> New Order
        </a>
    </div>

    @if (!Model.Any())
    {
        <div class="text-center py-5 bg-light rounded-4 border">
            <i class="bi bi-journal-x display-1 text-secondary opacity-50"></i>
            <h3 class="mt-3">No orders found</h3>
            <p class="text-muted">You haven't placed any orders yet.</p>
            <a asp-action="Create" class="btn btn-outline-primary mt-2">Place your first order</a>
        </div>
    }
    else
    {
        <div class="row g-4">
            @foreach (var order in Model)
            {
                <div class="col-md-6 col-lg-4">
                    <div class="card h-100 border-0 shadow-sm rounded-4 overflow-hidden hover-shadow transition">
                        <div class="card-header bg-white border-0 pt-4 px-4 d-flex justify-content-between align-items-start">
                            <span class="badge rounded-pill bg-@order.StatusDisplayClass fs-6 px-3 py-2">
                                @switch (order.Status)
                                {
                                    case OrderStatus.Pending:
                                        <i class="bi bi-clock-history me-1"></i>
                                        break;
                                    case OrderStatus.Accepted:
                                        <i class="bi bi-check-circle me-1"></i>
                                        break;
                                    case OrderStatus.InTransit:
                                        <i class="bi bi-truck me-1"></i>
                                        break;
                                    case OrderStatus.Delivered:
                                        <i class="bi bi-box-fill me-1"></i>
                                        break;
                                    case OrderStatus.Cancelled:
                                        <i class="bi bi-x-circle me-1"></i>
                                        break;
                                }
                                @order.Status
                            </span>
                            <span class="text-muted small">
                                <i class="bi bi-calendar3 me-1"></i>@order.FormattedCreatedOn
                            </span>
                        </div>
                        <div class="card-body px-4">
                            <h5 class="card-title fw-bold mb-3 text-truncate">@order.Description</h5>
                            <div class="d-flex align-items-center mb-3">
                                <div class="bg-primary bg-opacity-10 p-2 rounded-circle me-3">
                                    <i class="bi bi-cash text-primary"></i>
                                </div>
                                <div>
                                    <div class="text-muted small">Price</div>
                                    <div class="fw-bold">@order.FormattedPrice</div>
                                </div>
                            </div>
                        </div>
                        <div class="card-footer bg-light border-0 p-3 mt-auto">
                            <div class="d-grid">
                                <a asp-action="Details" asp-route-id="@order.Id" class="btn btn-outline-primary rounded-pill">
                                    View Details <i class="bi bi-arrow-right ms-1"></i>
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
</div>

<style>
    .hover-shadow:hover {
        transform: translateY(-5px);
        box-shadow: 0 .5rem 1rem rgba(0,0,0,.15)!important;
    }
    .transition {
        transition: all 0.3s ease;
    }
</style>